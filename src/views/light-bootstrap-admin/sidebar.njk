<div class="sidebar" data-image="/light-bootstrap-admin/img/sidebar-5.jpg" data-color="azure">
    <!--
Tip 1: You can change the color of the sidebar using: data-color="purple | blue | green | orange | red"

Tip 2: you can also add an image using data-image tag
-->
    <div class="sidebar-wrapper">
        <div class="logo">
            <a href="#" class="simple-text">
                {{req.admin.sidebar.title | tr}}
            </a>
        </div>
        <ul class="nav">
            {% for element in req.admin.sidebar.elements %}
                <li class="nav-item  {{ 'active' if element.id == req.admin.sidebar.activeElemenetId }}">
                    <a class="nav-link" href="{{ route(element.route) }}">
                        <i class="{{element.icon}}"></i>
                        <p>{{element.label | tr}}</p>
                    </a>
                </li>
            {% endfor %}
        </ul>
    </div>
</div>
